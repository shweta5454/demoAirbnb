<%layout("/layouts/boilerplate")%>
<body>
  <div class="row offset-2">

    <h2>Create a new Listing</h2>
 <form method="POST" action="/listings/create" novalidate class="needs-validation" enctype="multipart/form-data">
 
   <div class="col-8 ">
    <div class="mb-3">
      <label class="form-label" for="title">Title</label>
      <input
        name="listing[title]"
        placeholder="Add a catchy title"
        class="form-control"
        type="text" 
        required
      />
      <div class="valid-feedback">Title looks good</div>
    </div>

    <div class="mb-3">
      <label class="form-label" for="description" >Description</label>

      <textarea
    
        name="listing[description]"
        class="form-control"
                required
      ></textarea>
      <div class="invalid-feedback">Please add short description</div>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Upload Listing Image</label>
      <input name="listing[image]" type="file" id="" class="form-control" required/>
    </div>
<div class="row">
    <div class="mb-3 col-md-4"><label for="price">Price</label>
      <input
        name="listing[price]"
        placeholder="1200"
      
        class="form-control"
                required
      />
      <div class="invalid-feedback">Price should be valid</div>
    </div>

    <div class="mb-3 col-md-8" ><label for="location">location</label>
      <input
        name="listing[location]"
        placeholder="Manglore,mysore"
        type="text"
        class="form-control"
                required
      />
      <div class="invalid-feedback">Location should be valid</div>
    </div>
  </div>
    <div class="mb-3"><label for="country">Country</label>
      <input
        name="listing[country]"
        placeholder="India"
        type="text"
        class="form-control"
                required
      />
      <div class="invalid-feedback">Country should be valid</div>
    </div>
    <button class="btn btn-dark add-btn">ADD</button>
  </form>
</div>
</div>
</body>
